<header class="navbar">
    <% if user_signed_in? %>
        <div class="navbar__brand">
            <%= current_company.name %>
        </div>
        <div class="navbar__name">
            <%= current_user.name %>
        </div>
        <%= 
            button_to "Sign out",
            destroy_user_session_path,
            method: :delete,
            class: "btn btn--light"
        %>
    <% else %>
        <%= 
            link_to "Sign in",
            new_user_session_path,
            class: "btn btn--light navbar__right"
        %>
    <% end %>
</header>